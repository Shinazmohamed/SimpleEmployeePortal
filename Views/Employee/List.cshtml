<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
<table id="employeeTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Location Name</th>
            <th>Department Name</th>
            <th>Category Name</th>
            <th>SubCategory Name</th>
            <th>E1</th>
            <th>E2</th>
            <th>M1</th>
            <th>M2</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <!-- Rows will be populated dynamically using JavaScript -->
    </tbody>
</table>
<!-- Add this modal to your HTML for delete confirmation -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this employee?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#employeeTable').DataTable({
                // DataTables configuration options go here
            });

            // Use AJAX to fetch data and populate the table dynamically
            $.ajax({
                url: '/employee/GetList', // Replace with your API endpoint
                method: 'GET',
                dataType: 'json',
                success: function (data) {
                    $.each(data, function (index, item) {
                        table.row.add([
                            item.locationName,
                            item.departmentName,
                            item.categoryName,
                            item.subCategoryName,
                            item.e1,
                            item.e2,
                            item.m1,
                            item.m2,
                            '<button class="btn btn-primary btn-edit" data-id="' + item.id + '">Edit</button>',
                            '<button class="btn btn-danger btn-delete" data-id="' + item.id + '">Delete</button>'
                        ]).draw(false);
                    });
                }
            });

            // Handle Edit button click
            $('#employeeTable').on('click', '.btn-edit', function () {
                var id = $(this).data('id');
                // Redirect to the edit page with the employee ID
                window.location.href = '/employee/Edit?id=' + id; // Replace with your edit page URL
            });

            // Handle Delete button click
            $('#employeeTable').on('click', '.btn-delete', function () {
                var id = $(this).data('id');
                // Show a confirmation modal here and handle delete accordingly
                // You can use Bootstrap's modal for this purpose
            });

